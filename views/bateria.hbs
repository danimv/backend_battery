      href="/comunitat/config">Configuració</a> --}}
    <a style="font-size: 150%;" type="button" role="button" class="btn btn-outline-primary">Descàrregues</a>
    <a style="font-size: 150%;" type="button" role="button" class="btn btn-outline-primary">Instruccions</a>
  </div>
</div>
 <div class="table-responsive">
    <table id="tableF" class="table table-bordered" style="font-size:medium;">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Id Usuari</th>
          <th scope="col">Nom</th>
          <th scope="col">Cognoms</th>
          <th scope="col">Email</th>
          <th scope="col">Coeficient</th>
          <th scope="col">Estat</th>
          <th scope="col">Vinculat</th>
          <th scope="col" style="text-align: center;">Accions</th>
        </tr>
      </thead>
      <tbody>
        {{#each rows2}}
        <tr>
          <td scope="row">{{this.idUsuari}}</th>
          <td>{{this.nom}}</td>
          <td>{{this.cognoms}}</td>
          <td>{{this.email}}</td>
          <td style="text-align: center;"><b>{{this.coeficient}}</b></td>
          <td>{{this.estat}}</td>
          <td>{{this.vinculat}}</td>
          <td style="width: 17%;" class="text-end">
            <a style="font-size:100%" ; href="/usuaris/viewuser/{{this.idUsuari}}" type="button"
              class="btn btn-light btn"><i style="font-size: 115%;" class="bi bi-eye 2xs"></i> Info</a>
            {{!-- {{#if this.cognoms}}--}}
            {{#if ../mode}}
            <a style="font-size:100%" ; href="/usuaris/edituser/{{this.idUsuari}}" type="button" --}}
              class="btn btn-light btn"><i style="font-size: 115%;" class="bi bi-pencil"></i>
              Edita</a>
            {{/if}}
            {{!-- {{/if}} --}}
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>